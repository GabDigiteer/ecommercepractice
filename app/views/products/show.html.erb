

<h1> Viewing product info for: <%=@product.name%> </h1>

<p> Price: <%=@product.price%> </p>
<p> Description: <%=@product.description%></p>
<%if admin?%>
<%= render "form", product: @product %>


  <p><%= link_to "Destroy", product_path(@product), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %>
    </p>


<%end%>
<%if customer?%>
<%= form_with(model: CartItem.new, url: add_to_cart_product_path, method: :post) do |form| %>
  <%= form.text_field :product_id, value: @product.id %>
  <%= form.submit "Add to Cart" %>
<% end %>
<%end%>